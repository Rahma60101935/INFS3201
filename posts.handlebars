    <title>Create New Posts</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h2 {
            color: #ff69b4; /* pink */
            margin-top: 20px;
        }

        form {
            background-color: #add8e6; /* light blue */
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            width: 70%; /* Adjust width as needed */
            margin: 0 auto; /* Center the form */
        }

        textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            resize: vertical;
        }

        label {
            font-weight: bold;
        }

        input[type="file"] {
            margin-bottom: 10px;
        }

        input[type="submit"] {
            background-color: #ff69b4; /* pink */
            color: #fff;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #ff1493; /* darker pink */
        }

        .other-images {
            margin-top: 20px;
        }

        .other-images .image-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .other-images .image-container img {
            width: 330px;
            height: auto;
            margin-bottom: 5px;
            border-radius: 5px;
        }

        .other-images .image-container .image-text {
            font-size: 16px;
            color: #555; /* dark gray */
            margin-bottom: 5px;
        }
